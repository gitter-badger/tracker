= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project
    = f.collection_select :project_id, Project.all, :id, :title
  .field
    = f.label 'Developer'
    = f.collection_select :user_id, User.all, :id, :email
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :begin_time
    = f.datetime_select :begin_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :difficulty
    = f.number_field :difficulty
  .field
    = f.label :tasktype
    = f.collection_select :tasktype_id, Tasktype.all, :id, :description
  .field
    = f.label :finished
    = f.check_box :finished
  .actions
    = f.submit 'Save',:class => "btn btn-primary" 
